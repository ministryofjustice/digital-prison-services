{% set tabs = [
    { text: 'Quick look', path: '' },
    { text: 'Personal', path: '/personal' },
    { text: 'Alerts', path: '/alerts' },
    { text: 'Case notes', path: '/case-notes' },
    { text: 'Key dates', path: '/key-dates' }
  ]
%}

<div class="govuk-tabs" data-module="govuk-tabs">
  <h2 class="govuk-tabs__title">
    Prisoner profile sections
  </h2>
  <ul class="govuk-tabs__list">
    {% for tab in tabs %}
      {% set fullTabPath = '/prisoner/' + prisonerProfileData.offenderNo + tab.path %}
      {% set isSelected = ' govuk-tabs__list-item--selected' if currentUrlPath.split('?')[0] === fullTabPath %}
      <li class="{{'govuk-tabs__list-item' + isSelected }}">
        <a class="govuk-tabs__tab" href="{{ fullTabPath }}">
        {{ tab.text }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
