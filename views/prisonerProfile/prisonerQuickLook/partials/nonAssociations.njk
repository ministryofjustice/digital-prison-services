{% if nonAssociations.enabled %}
    <h3 class="govuk-heading-m">Non-associations</h3>
    <div data-test="personal-details">
        {% set nonAssociationsRows = [] %}

        {% if nonAssociations.sectionError %}
            <p class="govuk-body">
                Unable to show any of these details. You can try reloading the page.
            </p>
        {% else %}
            {% if nonAssociations.prisonerNonAssociations.prisonId != 'OUT' and nonAssociations.prisonerNonAssociations.prisonId != 'TRN' %}
                {% set nonAssociationsRows = (nonAssociationsRows.push(
                    {
                        key: {
                        text: 'In ' + nonAssociations.prisonerNonAssociations.prisonName
                    },
                        value: {
                        text: nonAssociations.prisonerNonAssociations.openCount | showDefault(0)
                    }
                    }
                    ), nonAssociationsRows) %}
            {% endif %}

            {{ govukSummaryList({
                rows: nonAssociationsRows,
                classes: "govuk-!-margin-bottom-2",
                attributes: { "data-test": "non-associations-info-summary" }
            }) }}

            <a href="{{ nonAssociations.uiUrl }}/prisoner/{{ nonAssociations.prisonerNonAssociations.prisonerNumber }}/non-associations"
               class="govuk-link govuk-!-font-size-19">
                Manage non-associations
            </a>
        {% endif %}
    </div>
{% endif %}
