{% extends "../partials/layout.njk" %}
{% set mainClasses = "govuk-main-wrapper--l" %}

{% set title =  "You do not have permission to view this page" %}

 {% block beforeContent %}
     {{ govukBreadcrumbs({
         items: [
             { text: "Home", href: "/" },
             { text: title }
         ]
     }) }}
 {% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">{{ title }}</h1>
            <p class="govuk-body">You cannot access prisoner profiles on Digital Prison Services (DPS).</p>
            <p class="govuk-body">To get help, contact the helpdesk by calling 0800 917 5148, or #6598 from inside a prison.</p>
            <p class="govuk-body"><a class="govuk-link" href="/">DPS homepage</a></p>
        </div>
    </div>
{% endblock %}
