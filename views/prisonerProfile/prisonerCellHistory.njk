{% extends "../partials/layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{%- from "moj/components/pagination/macro.njk" import mojPagination -%}

{% set title =  "Location details" %}

{% set rows = [] %}
{% for cell in cellData %}
  {% set rows = (rows.push([  
    {
      text: cell.establishment
    },
    {
      text: cell.location
    },
    {
      text: cell.movedIn
    },
    {
      text: cell.movedOut
    }
  ]), rows) %}
{% endfor %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "Home",
        href: dpsUrl
      },
      {
        text: breadcrumbPrisonerName,
        href: profileUrl
      },
      {
        text: 'Location details'
      }
    ],
    classes: 'govuk-!-display-none-print'
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half">
      <h1 class="govuk-heading-l">{{titleWithName | safe}}</h1>
    </div>
    <div class="govuk-grid-column-one-half pull-right">
      {{ govukButton({
        href: changeCellLink,
        text: "Change cell",
        preventDoubleClick: true,
        classes: "govuk-button",
        attributes: {
          "data-test": 'cell-move-button'
        }
        }) }}
    </div>
  </div>
  <h2 class="govuk-heading-m">Current location</h2>
    <div class="cell-history-header govuk-!-margin-bottom-7">
      <div class="govuk-grid-row govuk-!-margin-top-2">
        <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-third">
            <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Establishment</h3>
            </div>
            <div class="govuk-grid-column-one-third">
            <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Location</h3>
            </div>
            <div class="govuk-grid-column-one-third">
            <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Moved in</h3>
            </div>
        </div>
        </div>
        <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-one-half">
            {% if isSingleOccupancy %}
              <p class="govuk-body">Single occupancy cell</p>
            {% else %}
              <h3 class="govuk-heading-s govuk-!-margin-bottom-1">Currently sharing with</h3>
            {% endif %}
          </div>
            <div class="govuk-grid-column-one-half">
            <h3 class="govuk-heading-s govuk-!-margin-bottom-1"></h3>
            </div>
        </div>
        </div>
      </div>
      <div class="govuk-grid-row govuk-!-margin-bottom-2">
        <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-third">
            <p class="govuk-body govuk-!-margin-bottom-1" data-test="name"> {{ currentLocation.establishment }} </p>
            </div>
            <div class="govuk-grid-column-one-third">
            <p class="govuk-body govuk-!-margin-bottom-1" data-test="living-unit"> {{ currentLocation.location }} </p>
            </div>
            <div class="govuk-grid-column-one-third">
            <p class="govuk-body govuk-!-margin-bottom-1" data-test="csra"> {{ currentLocation.movedIn }} </p>
            </div>
        </div>
        </div>
        
        <div class="govuk-grid-column-one-half">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-one-half" data-test="occupiers">
            {% if occupiers.length %}
                {% for occupier in occupiers %}
                  <p class="govuk-body"><a class="govuk-link" href={{occupier.profileUrl}}>{{ occupier.name }}</a></p>
                {% endfor %}
            {% elif isSingleOccupancy %}
                <p class="govuk-body"></p>
            {% else %}
                <p class="govuk-body">None</p>
            {% endif %}
          </div>
          <div class="govuk-grid-column-one-half">
          <a href="#" class="govuk-link" data-test="cell-details-link">View details</a>
          </div>
        </div>
        </div>
      </div>
    </div>
  <h2 class="govuk-heading-m">Previous locations</h2>
  {% if rows.length %}
      {{ govukTable({
        head: [
          { text: "Establishment" },
          { text: "Location" },
          { text: "Moved in" },
          { text: "Moved out" }
        ],
        rows: rows,
        attributes: { "data-test": "prisoner-cell-history" },
        classes: 'govuk-table--with-child-rows'
      }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <p class="govuk-body">
        <a class="govuk-link" href={{ profileUrl }} data-test="back-link">Return to prisoner profile</a>
      </p>
    </div>
  </div>
  
{% endblock %}