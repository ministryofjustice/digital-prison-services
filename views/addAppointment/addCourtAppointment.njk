{% extends "../partials/layout.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "components/datePicker/datePicker.njk" import datePicker %}
{% from "components/timePicker/timePicker.njk" import timePicker %}
{% from "components/scheduledEvents/scheduledEvents.njk" import scheduledEvents %}

{% set title = 'Add videolink booking date and time' %}
{% set offenderUrl = dpsUrl + 'offenders/' + offenderNo %}

{% block beforeContent %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: "Home",
                href: dpsUrl
            },
            {
                text: offenderName,
                href: offenderUrl
            },
            {
                text: title
            }
        ]
    }) }}
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">
                {{title}}
            </h1>

            {% if errors.length > 0 %}
                {{ govukErrorSummary({
                    titleText: "There is a problem",
                    errorList: errors,
                    attributes: { 'data-qa-errors': true }
                }) }}
            {% endif %}

            <p class="govuk-body">
                <strong>Name:</strong> {{offenderName}}
            </p>

            <p class="govuk-body">
                <strong>Prison:</strong> {{agencyDescription}}
            </p>

            <form method="POST" novalidate="novalidate">
                <input type="hidden" name="bookingId" value={{bookingId}} />

                <input type="hidden" name="appointmentType" value="{{ formValues.appointmentType }}">
                <input type="hidden" name="bookingId" value="{{ bookingId }}">

                {{ datePicker({
                    id: 'date',
                    label: 'Date',
                    name: 'date',
                    date: formValues.date,
                    errorMessage: errors | findError('date'),
                    attributes: {'data-disable-past-date':'true', 'data-add-appointment-date': 'true'}
                }) }}

                {{ timePicker({
                    id: 'start-time',
                    label: 'Start time',
                    name: 'startTime',
                    hour: formValues.startTimeHours,
                    minute: formValues.startTimeMinutes,
                    errorMessage: errors | findError('start-time-hours')
                }) }}

                {{ timePicker({
                    id: 'end-time',
                    label: 'End time',
                    name: 'endTime',
                    hour: formValues.endTimeHours,
                    minute: formValues.endTimeMinutes,
                    errorMessage: errors | findError('end-time-hours')
                }) }}

                {{ govukRadios({
                    classes: "govuk-radios--inline",
                    idPrefix: "pre-appointment-required",
                    name: "preAppointmentRequired",
                    errorMessage: errors | findError('pre-appointment-required'),
                    fieldset: {
                        legend: {
                        text: "Add videolink session before?",
                        classes: "govuk-fieldset__legend--s"
                        }
                    },
                    items: [
                        {
                            value: "yes",
                            text: "Yes",
                            checked: formValues.preAppointmentRequired == 'yes'
                        },
                        {
                            value: "no",
                            text: "No",
                            checked: formValues.preAppointmentRequired == 'no'
                        }
                    ]
                }) }}

                {{ govukRadios({
                    classes: "govuk-radios--inline",
                    idPrefix: "post-appointment-required",
                    name: "postAppointmentRequired",
                    errorMessage: errors | findError('post-appointment-required'),
                    fieldset: {
                        legend: {
                        text: "Add videolink session after?",
                        classes: "govuk-fieldset__legend--s"
                        }
                    },
                    items: [
                        {
                            value: "yes",
                            text: "Yes",
                            checked: formValues.postAppointmentRequired == 'yes'
                        },
                        {
                            value: "no",
                            text: "No",
                            checked: formValues.postAppointmentRequired == 'no'
                        }
                    ]
                }) }}

                {{ govukButton({
                    text: "Save and continue",
                    type: "submit",
                    classes: "govuk-!-margin-right-2"
                }) }}

                {{ govukButton({
                    text: "Cancel",
                    element: 'a',
                    href: offenderUrl,
                    classes: "govuk-button--secondary"
                }) }}
            </form>
        </div>
    </div>
{% endblock %}
