{% macro scheduledEvents(events, type, name) %}
  <div class="{{'scheduled-events-container govuk-list scheduled-events-container--' + type}}">
    <h2 class="govuk-heading-m">{{name}} - schedule</h2>
    <ul class="govuk-list" data-qa="{{type + '-events'}}">
      {% if events.length %}
        {% for event in events %}
          <li class="scheduled-event">
            <span class="scheduled-event__time">{{ event.startTime + ' - ' + event.endTime if event.endTime else event.startTime }}</span>
            <strong>{{event.eventDescription}}</strong>
          </li>
        {% endfor %}
      {% else %}
        <li>Nothing scheduled on this date</li>
      {% endif %}
    </ul>
  </div>
{% endmacro %}

