{% extends "../partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% block content %}
    <div class="govuk-blue-background-confirm-override">
        {{ govukPanel({
            titleText: title,
            classes: "govuk-!-margin-bottom-9"
        }) }}
    </div>

    <p class="govuk-body">{{ name }} has been moved out of his current location and does not have a cell.</p>

    <h3 class="govuk-heading-s">What happens next</h3>
    <p class="govuk-body">You must move {{ name }} into a cell location as soon as possible today.</p>

    {{ govukButton({
        text: "Search for another prisoner",
        element: 'a',
        href: prisonerSearchLink,
        attributes: {
            'data-test': 'back-to-search'
        }
    }) }}
{% endblock %}
